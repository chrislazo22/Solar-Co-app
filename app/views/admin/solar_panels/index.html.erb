<h1>Solar Panels</h1>

<table>
  <thead>
    <tr>
      <th>Wattage</th>
      <th>Voltage</th>
      <th>Cell Type</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @solar_panels.each do |solar_panel| %>
      <tr>
        <td><%= image_tag(solar_panel.image) %></td>
    		<td><%= solar_panel.wattage %></td>
        <td><%= solar_panel.voltage %></td>
        <td><%= solar_panel.cell_type %></td>
        <td><%= link_to 'Show', solar_panel %></td>
        <td><%= link_to 'Edit', edit_solar_panel_path(solar_panel) %></td>
        <td><%= link_to 'Destroy', solar_panel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to "New Solar Panel", new_solar_panel_path %>